<div class="container login">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 login">
            <form class="clearfix mb-4" method="POST" action="/login">
                <p id="login-title">Snippet Login</p>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="username" class="form-control" id="userField" aria-describedby="usernameHelp" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="passwordField" placeholder="Password">
                </div>
                <br>
                <center>
                    <button id="login" type="submit" class="btn btn-warning">Submit</button>
                </center>
                <br>
                <center>
                    <a href="/signup">Not a member? Sign Up!</button>
                </center>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>